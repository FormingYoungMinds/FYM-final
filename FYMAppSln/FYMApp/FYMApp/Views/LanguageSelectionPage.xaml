<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="FYMApp.Views.LanguageSelectionPage" Title="Select Language">

    <ContentPage.Content>
        <StackLayout x:Name="layout">
            <Image Source="splash_logo.png" Aspect="AspectFill" HeightRequest="400" />
            <Button BackgroundColor="Accent" VerticalOptions="Center"
        HorizontalOptions="FillAndExpand" Text="English" />
            <Button BackgroundColor="SkyBlue" VerticalOptions="Center"
        HorizontalOptions="FillAndExpand" Text="isiXhosa" />
            <Button  BackgroundColor="LightPink" VerticalOptions="Center"
        HorizontalOptions="FillAndExpand" Text="Afrikaans" />
        </StackLayout>
    </ContentPage.Content>

</ContentPage>