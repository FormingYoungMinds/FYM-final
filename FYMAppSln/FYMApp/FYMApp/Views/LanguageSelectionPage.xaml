<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="FYMApp.Views.LanguageSelectionPage" Title="Select Language" BackgroundImageSource="RandomKid.jpeg">

    <ContentPage.Content>
        <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Padding="20" Spacing="30">
            <Button Text="ENGLISH" HorizontalOptions="Center" Command="{Binding SignUpCommand}" WidthRequest="350" TextColor="Black" HeightRequest="70" CornerRadius="20" BackgroundColor="Transparent" FontSize="Large" FontAttributes="Bold" BorderColor="Black" BorderWidth="2" />
            <Button Text="AFRIKAANS" HorizontalOptions="Center" Command="{Binding SignUpCommand}" WidthRequest="350" TextColor="Black" HeightRequest="70" CornerRadius="20" BackgroundColor="Transparent" FontSize="Large" FontAttributes="Bold" BorderColor="Black" BorderWidth="2" />
            <Button Text="isiXHOSA" HorizontalOptions="Center" Command="{Binding SignUpCommand}" WidthRequest="350" TextColor="Black" HeightRequest="70" CornerRadius="20" BackgroundColor="Transparent" FontSize="Large" FontAttributes="Bold" BorderColor="Black" BorderWidth="2" />
        </StackLayout>
    </ContentPage.Content>

</ContentPage>